generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderSide {
  BUY
  SELL
}

enum OrderStatus {
  OPEN
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  usdBalance BigInt @default(500000) @db.BigInt

  orders Order[]
}

model Order {
  id          String      @id @default(uuid())
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  symbol      String
  side        OrderSide
  marginCents BigInt      @db.BigInt
  leverage    Int
  openPrice   BigInt      @db.BigInt
  closePrice  BigInt?     @db.BigInt
  pnlCents    BigInt?     @db.BigInt
  status      OrderStatus @default(OPEN)
  openedAt    DateTime    @default(now())
  closedAt    DateTime?
}

model CandleM1 {
  id     BigInt   @id @default(autoincrement())
  symbol String
  ts     DateTime
  open   BigInt   @db.BigInt
  high   BigInt   @db.BigInt
  low    BigInt   @db.BigInt
  close  BigInt   @db.BigInt

  @@unique([symbol, ts], name: "symbol_ts")
  @@index([symbol, ts])
}
